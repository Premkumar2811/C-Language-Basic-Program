void main()
{
    float km,meter,cm,inch,feet;
    clrscr();

    printf("\nEnter the km");
    scanf("%d",&km);

   meter=km*1000;
   cm=meter*100;
   inch=cm/2.54;
   feet=inch/12

   printf("\n meter=%f",meter);
   printf("\n cm=%f",cm);
   printf("\n inch=%f",inch);
   printf("\n feet=%f",feet);

    getch();
}



